{
  "appId": "io.Palaemon.v1",
  "productName": "Palaemon",
  "copyright": "Palaemon (OSLabs)",
  "directories": {
    "output": "build",
    "buildResources": "build_src"
  },
  "files": [
    "package.json",
    "dist/**/*",
    "node_modules"
  ],
  "dmg": {
    "background": null,
    "backgroundColor": "#ffffff",
    "window": {
      "width": "400",
      "height": "300"
    },
    "contents": [
      {
        "x": 100,
        "y": 100
      },
      {
        "x": 300,
        "y": 100,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "mac": {
    "target": "dmg",
    "category": "public.app-category.developer-tools",
    "hardenedRuntime": true
  },
  "win": {
    "target": "nsis"
  },
  "linux": {
    "target": "AppImage",
    "category": "Development"
  }
}